generator client {
  provider = "prisma-client-js"
  // output   = "../dist/server/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id            String   @id @default(cuid())
  name          String
  ingredients   String[]
  procedures    String[]
  imageLink     String
  accountName   String
  mealTime      String
  mealType      String
  bookmarked    Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}