generator client {
  provider = "prisma-client-js"
  // output   = "../dist/server/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recipe {
  id            String   @id @default(cuid())
  name          String
  ingredients   String[]
  procedures    String[]
  imageLink     String
  accountName   String
  mealTime      String
  mealType      String
  bookmarked    Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model User {
  id            String  @id @default(cuid())
  email         String  @unique
  passwordHash  String
  username      String  @unique
  createdAt     DateTime @default(now())
  sessions      Session[]
}

model Session {
  id          String    @id @default(cuid())
  tokenHash   String    @unique
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  expiresAt   DateTime

  @@index([userId])
  @@index([expiresAt])
}