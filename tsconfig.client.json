{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "public",
        "outDir": "dist/client",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "types": [],
        "module": "es2020",
        "moduleResolution": "bundler",
        "target": "es2020",
        "jsx": "react-jsx",
        "declaration": false,
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["public/**/*.ts", "public/**/*.tsx"],
    "exclude": ["node_modules"]
}
