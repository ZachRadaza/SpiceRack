{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist/server",
        "lib": ["ES2020"],
        "types": ["node"],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2020",
        "jsx": "preserve",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
